<% if users.any? %>
  <ul class="media-list follow_font follow_body">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left follow_img">
          <%= image_tag user.image_url %>
        </div>
        <div class="media-body">
        <ul class="a">
          <li class="name_font"><%= link_to "@"+user.name, user_path(user) %></li>
          <li class="follow_profile">プロフィール</li>
        </ul>
        <div class="follow_main">
          <p><%=user.profile %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>