<ul class="media-list post_font">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-left posts_img">
        <%= image_tag @user.image_url %>
      </div>
      <div class="media-body post-body">
        <ul>
          <li class="name_font"><%= link_to "@"+post.user.name, user_path(post.user) %></li>
          <li class="favorite"><%= render 'favorites/favorite_button',user: @user, post: post %></li>
        </ul>
        <div class="post_main">
          <p><%= post.content %></p>
          <% if post.image.present? %>
            <p><%= image_tag post.image %></p>
          <% end %>
        </div>
        <ul class="post_under">
         <li class="text-muted font_tc"><%= post.created_at %></li>
         <li class="post_delete font_tc">
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          <%= link_to "Comment",post_path(post,@comments) %>
          </li>
      </div>
    </li>
  <% end %>
</ul>
