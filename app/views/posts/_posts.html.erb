<ul class="media-list">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(post.user, options = { size: 100 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p><%= post.content %></p>
        </div>
        <%= render 'favorites/favorite_button',user: @user, post: post %>
        <!--<#%= render 'comments/comment_button',user: @user, post: @post %>-->
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          <!--<div class="media-right"><#%= image_tag post.image %></div>-->
      </div>
    </li>
  <% end %>
</ul>
